{% extends 'base-front.html.twig' %}

{% block title %}Nouveau message{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>
                    <span class="d-block titre-home col-7 text-end">Evènement</span>
                    <br>
                    <span class="d-block titre-home col-8 text-end mb-3">{{ messagerie.event.nom | upper}}</span>
                </h1>
            </div>
        </div>
    </div>

    <div class="container bg-under-text">
        <div class="row p-3">
            <div class="col-12">
                <div class="card ">
                    <div class="card-title">
                        <h2 class="p-5 text-center"> Contactez les autres utilisateurs inscrits dans cet évènement.</h2>
                    </div>
                    <div class="card-body">
                        <div class="col-12 text-end p-3">
                            <button class="btn btn-warning">{{ button_label|default('Publier') }}</button>
                        </div>
                        <div class="col-6 text-center mb-5">
                            {{form_row(form.message)}}
                        </div>

                        <div class="d-flex flex-wrap justify-content-center">
                            <div class="col-9">
                                
                                <table class="table table-info table-hover table-striped m-0 ">
                                    <thead>
                                        <tr class="text-left">
                                        <th scope="col">Expéditeur</th>
                                        <th scope="col">Message</th>
                                        {% if messages is defined and messages|length > 0 %}
                                        {% for message in messages %}
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                        {# ANCHOR JE N ARRIVE PAS A RECUPERER LES INFOS DU USER POUR INTEGRER LE USERNAME SUR LE 1ER TD #}
                                        <td>{{ app.user.username}}</td>
                                        <td>{{ message.message }}</td>
                                        {% endfor %}
                                        {% endif %}
                                    </tbody>
                                </table>
                            
                            </div>
                        </div>
                    </div>
                    <div class="col-12 p-3">
                            <a href="{{ path('event_index') }} " class="btn btn-outline-info mt-2">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
